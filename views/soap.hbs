{{> head}}
<body>
{{> header}}


<div class="w3-card-4  ">
  <div class="w3-container w3-blue ">
    <h2>SOAP NOTES </h2>
  </div>
  <form class="w3-container" action="/view/soap/{{id}}" method="post" id="soap-notes">
    <p>      
    <label for="subjective" class="w3-text-blue "><h3>SUBJECTIVE</h3></label>
